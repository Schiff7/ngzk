
.home
  display: block

section
  display: block
  width: 100%
  height: 100%

.pic-wrapper
  display: flex
  justify-content: space-between
  flex-wrap: wrap-reverse
  position: relative
  width: 100%
  height 100%
  overflow: hidden
  span
    position: absolute
    font-size: 75px
    font-family: 'IBM Plex Sans', sans-serif;
    color: #fff
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
  .pic
    display: block
    z-index: -1
    position: absolute
    left: -10%
    top: -10%
    width: 120%
    height: 120%
    filter: brightness(30%)
    background: #000 url(../images/others/home.jpg) center 0 no-repeat
    background-size: contain
  .bottom
    background-color: #fff
    display: block
    height: 40px;
    flex: 1
  .bottom-middle
    height: 0
    width: 0
    border: 20px solid #fff
    border-top-color: transparent


.search-wrapper
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  .search
    position: relative
    border: none
    width: 60%
    height: 35px
    input
      border: none 
      outline: none
      width: 100%
      height: 100%
      padding: 5px
      background: none
      color: #1b1f23
      &:focus
        border-bottom: 1px solid #1b1f23
    .data-list
      ul
        li
          display: flex
          align-items: center
          justify-content: flex-start
          list-style: none
          height: 35px
          a
            position: relative
            padding: 5px
            flex: 1 1 auto
            text-decoration: none 
            color: #1b1f23
            &:hover:before
              position: absolute
              content: '\3E'
              left: -10px

.grid-wrapper
  width: 100%
  height: 100%
  background-color: #eee