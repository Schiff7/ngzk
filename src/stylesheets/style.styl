// /src/stylesheets/style.styl

// ---------------- GLOBAL
*
  box-sizing: border-box
  margin: 0
  padding: 0

body
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"

.show-block
  display: block !important

.hide
  display: none !important

canvas
  position: fixed;
  top: 0
  left: 0
  z-index: 0
  width: 100%
  height: 100%
  pointer-events: none

// ------------------- HOME
.home
  display: block
  user-select: none

section
  display: block
  width: 100%
  height: 100%

.pic-wrapper
  display: flex
  justify-content: space-between
  flex-wrap: wrap-reverse
  position: relative
  width: 100%
  height 100%
  overflow: hidden
  span
    position: absolute
    font-size: 75px
    font-family: 'IBM Plex Sans', sans-serif
    color: #fff
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
  .pic
    display: block
    z-index: -1
    position: absolute
    left: -10%
    top: -10%
    width: 120%
    height: 120%
    filter: brightness(30%)
    background-color: #000
  .bottom
    background-color: #fff
    display: block
    height: 40px;
    flex: 1
  .bottom-middle
    height: 0
    width: 0
    border: 20px solid #fff
    border-top-color: transparent


.search-wrapper
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  .search
    position: relative
    border: none
    width: 60%
    height: 35px
    input
      border: none 
      outline: none
      width: 100%
      height: 100%
      padding: 5px
      background: none
      color: #1b1f23
      &:focus
        border-bottom: 1px solid #1b1f23
    .data-list
      ul
        li
          display: flex
          align-items: center
          justify-content: flex-start
          list-style: none
          height: 35px
          &.active:before
            position: absolute
            content: '\3E'
            left: -10px
          a
            position: relative
            padding: 5px
            flex: 1 1 auto
            text-decoration: none 
            color: #1b1f23

.grid-wrapper
  width: 100%
  height: 100%
  background-color: #eee


// ------------------- BLOG
.container
  background-color: #eee

.blog
  display: flex
  justify-content: space-between
  max-width: 1130px
  margin-left: auto
  margin-right: auto
  margin-bottom: 75px
  padding: 15px 15px
  border-radius: 3px
  .left
    width: 33.333333%
    padding: 10px
  .right
    width: 66.666667%
    padding: 10px


// ------------------- NAV
.nav
  display: flex
  justify-content: space-between
  align-items: center
  height: 215px
  padding: 20px
  text-transform: uppercase
  user-select: none
  background-color: #fff
  font-size: 14px;
  .menu
    a
      text-decoration: none;
      color: #666;
      letter-spacing: 2px;
    .selected
      border-bottom: 1px solid #7e1083
    span
      padding: 4px 12px;
      color: #cdcdcd;
  .search
    position: relative
    border: none
    width: 300px
    height: 35px
    input
      border: none 
      outline: none
      width: 100%
      padding: 5px
      background: none
      color: #1b1f23
      &:focus
        border-bottom: 1px solid #1b1f23
    .data-list
      ul
        li
          display: flex
          align-items: center
          justify-content: flex-start
          list-style: none
          a
            position: relative
            padding: 5px
            flex: 1 1 auto
            text-decoration: none 
            color: #1b1f23
            &:hover:before
              position: absolute
              content: '\3E'
              left: -10px

// --------------- ARTICLE
.article
  border-radius: 4px
  box-shadow: 0px 1px 1px rgba(0,0,0,.05);
  background-color: #fff
  h3
    text-align: center
    padding: 58px 0 40px 0
    font-size: 14px
    border-bottom: 1px solid #eee
  .text
    font-size: 80%
    line-height: 2
    padding: 5%
    text-align: center
    

// --------------- FILES
.files
  display: block
  margin-top: 20px
  background-color: #fff
  border-radius: 4px
  .header
    display: flex
    justify-content: space-between
    align-items: center
    padding: 8px 16px
    h3
      line-height: 1.25
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase
  .body
    display: block
    min-height: 350px
    padding: 8px 16px
    .tree
      user-select: none
      div
        cursor: pointer
        border-radius: 3px
        transition: .75s all ease
        &:hover
          background-color: rgba(126, 16, 131, 0.2)
        span
          padding: 5px
          font-weight: 600
      ul
        padding: 5px
        li
          margin-left: 16px
          font-size: 14px
          list-style: none
          a
            text-decoration: none 
            color: #1b1f23
            font-size: 12px
            &:hover
              border-bottom: 1px solid #1b1f23


// ----------------- PROFILE
.profile
  display: block
  background-color: #fff
  border: none
  border-radius: 4px
  .header
    display: flex
    justify-content: space-between
    align-items: center
    padding: 8px 16px
    h3
      line-height: 1.25
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase
  .body
    padding: 8px 16px
    .avatar
    .info
      text-align: center
      h3
        padding: 5px 0
        font-size: 16px
      p
        font-size: 14px
        line-height: 1.5
        white-space: nowrap